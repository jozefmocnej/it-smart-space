<h2>Central Index</h2>

@using (Ajax.BeginForm("IndexPartial", "Sensor", new AjaxOptions { UpdateTargetId = "divPartial" }, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.AtLocation, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(m => m.AtLocation, new { @class = "form-control" })*@
                @Html.DropDownListFor(model => model.AtLocation, Model.Locations, "-- Select Status --", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group col-md-5">
            @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(m => m.Type, new { @class = "form-control" })*@
                @Html.DropDownListFor(model => model.Type, Model.Types, "-- Select Status --", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group col-md-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Search" />
            </div>
        </div>
    </div>
}

